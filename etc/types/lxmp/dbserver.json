{
    "role": "host",
    "interface": "lxmp/dbserver",
    "description": "A MySQL or clone database server for a LXMP stack",
    "network": "pressboxx",
    "ports": [
        { "name": "mysql", "port": 3306 }
    ],
    "volumes": [
        { "import": "/vagrant/sql" },
        { "provision": "/vagrant/provision" },
        { "data": "mysql-5.5" }
    ],
    "hosts": [
        [ "pressbox/mailhog" ]
    ]
}