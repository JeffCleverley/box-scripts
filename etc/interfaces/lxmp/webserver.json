{
    "interface": "lxmp/webserver",
    "type": "container",
    "description": "A web server for a LXMP stack, e.g. Apache, Ngnix, etc.",
    "network": "pressboxx",
    "restart": "no",
    "ports": [
        { "host": 8080, "container": 80 },
        { "host": 8443, "container": 443 }
    ],
    "volumes": [
        { "host": "${PROJECT_BASE}/${CURRENT_PROJECT}/www", "container": "/var/www" }
    ],
    "hosts": [
        [ "pressbox/mailhog" ]
    ]
}
