{
    "interface": "lxmp/processvm",
    "type": "container",
    "description": "A ProcessVM for a LXMP stack, specifically PHP-FPM.",
    "network": "pressboxx",
    "restart": "no",
    "ports": [
        { "host": 9000, "container": 9000 }
    ],
    "volumes": [
        { "host": "/var/www", "container": "/var/www" },
        { "host": "/srv/sites", "container": "/srv/sites" }
    ],
    "hosts": [
        [ "pressbox/mailhog" ]
    ]
}